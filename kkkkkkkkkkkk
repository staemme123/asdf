// Check if the URL contains the specific fragment "#9523_archer" or similar pattern
if (!href.includes("#archer")) {
    alert("script must be run from #archer");
    // Optionally, redirect to a URL containing "#archer"
    window.location.href = game_data.link_base_pure + "overview_villages&mode=combined#archer";
} else {
    // Find the element with an ID matching the pattern "#<number>_archer"
    var archerElement = document.querySelector('[id*="_archer"]');
    if (archerElement) {
        archerElement.click();  // Click the element if found
    } else {
        console.log("No element matching the pattern was found.");
    }
}
